<Window x:Class="ControleMaterialIBAA.View.TelaPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Controle de Materiais - IBAA"
        Height="576" Width="1080">

    <Grid Margin="0,0,0,21">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="163*"/>
        </Grid.ColumnDefinitions>

        <!-- MENU -->
        <StackPanel Background="DarkSeaGreen" Grid.Column="0" RenderTransformOrigin="0.498,0.77" Margin="0,0,0,-20">
            
            <TextBlock x:Name="TxtBemVindo"
               FontSize="16"
               FontWeight="Bold"
               Foreground="Black"
               Margin="5"                       
               Text="Bem-vindo"/>
            
            <Button Content="Cadastrar Material"
                    Click="BtnCadastro_Click" 
                    Height="50" Margin="20" 
                    FontFamily="Carlito" 
                    FontWeight="Bold"/>
            
            <Button Content="Buscar Materiais"
                    Click="BtnBuscar_Click" 
                    Height="50"  
                    Margin="20" 
                    FontFamily="Carlito" 
                    FontWeight="Bold"/>
            
            <Button Content="Excluir Material"
                    Click="BtnExcluir_Click" 
                    Height="50" 
                    Margin="20" 
                    FontFamily="Carlito" 
                    FontWeight="Bold"/>
        </StackPanel>

        <!-- CONTEÚDO DINÂMICO -->
        <ContentControl x:Name="MainContent"
                        Grid.Column="1"
                        Margin="10,10,10,10"/>
    </Grid>
</Window>
