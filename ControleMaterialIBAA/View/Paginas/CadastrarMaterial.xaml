<UserControl x:Class="ControleMaterialIBAA.View.Paginas.CadastrarMaterial"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

    <UserControl.Resources>

        <!-- ESTILO CAMPOS -->
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8,3"/>
            <Setter Property="BorderBrush" Value="#B0C4C4"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="DatePicker">
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- ESTILO BOTÃO -->
        <Style TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#3E6F6F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

    </UserControl.Resources>

    <!-- FUNDO -->
    <Grid Background="#6F9C9C">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ================= CABEÇALHO ================= -->
        <StackPanel Grid.Row="0"
                    Margin="0,30,0,20"
                    HorizontalAlignment="Center">

            <TextBlock Text="CADASTRO DE MATERIAL"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="Black"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="Igreja Batista Anchieta"
                       FontSize="14"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- ================= CONTEÚDO ================= -->
        <Border Grid.Row="1"
                Background="#6F9C9C"
                Padding="20">

            <StackPanel HorizontalAlignment="Center"
                        Width="1100">

                <!-- FORMULÁRIO -->
                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="260"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="260"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>

                    <!-- LINHA 0 -->
                    <TextBlock Text="Material:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold" FontSize="14"/>
                    <TextBox Grid.Row="0" Grid.Column="1" FontFamily="Arial"/>

                    <TextBlock Text="Descrição:" Grid.Row="0" Grid.Column="3" VerticalAlignment="Center" FontWeight="Bold" FontSize="14"/>
                    <TextBox Grid.Row="0" Grid.Column="4"/>

                    <!-- LINHA 1 -->
                    <TextBlock Text="Marca/Modelo:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold" FontSize="14"/>
                    <TextBox Grid.Row="1" Grid.Column="1"/>

                    <TextBlock Text="QTD:" Grid.Row="1" Grid.Column="3" VerticalAlignment="Center" FontWeight="Bold" FontSize="14"/>
                    <TextBox Grid.Row="1" Grid.Column="4"/>

                    <!-- LINHA 2 -->
                    <TextBlock Text="Departamento:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold" FontSize="14"/>
                    <ComboBox Grid.Row="2" Grid.Column="1"/>

                    <TextBlock Text="Sub-Departamento:" Grid.Row="2" Grid.Column="3" VerticalAlignment="Center" FontWeight="Bold" FontSize="14"/>
                    <ComboBox Grid.Row="2" Grid.Column="4"/>

                    <!-- LINHA 3 -->
                    <TextBlock Text="Nº Série / Patrimônio:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold" FontSize="14"/>
                    <TextBox Grid.Row="3" Grid.Column="1"/>

                    <!-- SEPARADOR -->
                    <Separator Grid.Row="4" Grid.ColumnSpan="5" Margin="0,10"/>

                    <!-- LINHA 5 -->
                    <TextBlock Text="Valor Mensurado(R$):" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold" FontSize="14"/>
                    <TextBox Grid.Row="5" Grid.Column="1"/>

                    <TextBlock Text="Forma de Aquisição:" Grid.Row="5" Grid.Column="3" VerticalAlignment="Center" FontWeight="Bold" FontSize="14"/>
                    <TextBox Grid.Row="5" Grid.Column="4"/>

                    <!-- LINHA 6 -->
                    <TextBlock Text="Responsável:" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold" FontSize="14"/>
                    <TextBox Grid.Row="6" Grid.Column="1"/>

                    <TextBlock Text="Data de Verificação:" Grid.Row="6" Grid.Column="3" VerticalAlignment="Center" FontWeight="Bold" FontSize="14"/>
                    <DatePicker Grid.Row="6" Grid.Column="4"/>

                </Grid>

                <!-- BOTÕES -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,30,0,0">

                    <Button Content="Salvar"/>
                    <Button Content="Cancelar"
                            Background="#A94442"/>
                </StackPanel>

            </StackPanel>

        </Border>

    </Grid>

</UserControl>