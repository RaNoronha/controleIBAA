<UserControl x:Class="ControleMaterialIBAA.View.Pages.CadastroMaterial"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="629" Width="1295"
             Background="Azure">

    <Grid>
        <!-- Definição do layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Título -->
            <RowDefinition Height="Auto"/>
            <!-- Campos -->
            <RowDefinition Height="*"/>
            <!-- Espaço livre -->
            <RowDefinition Height="Auto"/>
            <!-- Botões -->
        </Grid.RowDefinitions>

        <!-- TÍTULO -->
        <TextBlock
                   Grid.Row="0"
                   FontSize="22"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,10"><Run Language="pt-br" Text="Igreja Batista Atitude de Anchieta"/></TextBlock>

        <!-- CAMPO NOME -->

        <!-- BOTÕES -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    Margin="593,498,594,0" Height="54" VerticalAlignment="Top">

            <Button Content="Salvar"
                    Width="89"
                    Margin="10,0" Height="40"/>

        </StackPanel>
        <TextBlock
            Grid.Row="0"
            FontSize="18"
            FontWeight="Bold"
            HorizontalAlignment="Center"
            Margin="0,49,0,550" Grid.RowSpan="3"><Run Language="pt-br" Text="Cadastro de Material"/></TextBlock>
        <Label Content="Label" HorizontalAlignment="Left" Margin="111,0,0,0" Grid.Row="2" VerticalAlignment="Center"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="229,301,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="428,195,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="356,248,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <Label Content="Material" HorizontalAlignment="Left" Margin="51,39,0,0" Grid.Row="2" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
