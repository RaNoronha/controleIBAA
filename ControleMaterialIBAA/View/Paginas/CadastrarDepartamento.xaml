<UserControl x:Class="ControleMaterialIBAA.View.Paginas.CadastrarDepartamento"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

    <UserControl.Resources>

        <!-- ESTILO CAMPOS -->
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8,3"/>
            <Setter Property="BorderBrush" Value="#B0C4C4"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- ESTILO CHECKBOX -->
        <Style TargetType="CheckBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
        </Style>

        <!-- ESTILO BOTÃO -->
        <Style TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#3E6F6F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

    </UserControl.Resources>

    <!-- FUNDO -->
    <Grid Background="#6F9C9C">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ================= CABEÇALHO ================= -->
        <StackPanel Grid.Row="0"
                    Margin="0,30,0,20"
                    HorizontalAlignment="Center">

            <TextBlock Text="CADASTRO DE DEPARTAMENTO"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="Black"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="Igreja Batista Anchieta"
                       FontSize="14"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- ================= CONTEÚDO ================= -->
        <Border Grid.Row="1"
                Background="#6F9C9C"
                Padding="20">

            <StackPanel HorizontalAlignment="Center"
                        Width="900">

                <!-- FORMULÁRIO -->
                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="350"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>

                    <!-- LINHA 0 -->
                    <TextBlock Text="Departamento:"
                               Grid.Row="0" Grid.Column="0"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               FontSize="14"/>

                    <TextBox x:Name="TxtDepartamento"
                             Grid.Row="0" Grid.Column="1"/>

                    <!-- CHECKBOX -->
                    <CheckBox x:Name="ChkCriarSub"
                              Content="Criar Sub-Departamento"
                              Grid.Row="1"
                              Grid.Column="1"
                              Checked="ChkCriarSub_Checked"
                              Unchecked="ChkCriarSub_Unchecked"/>

                    <!-- LINHA SUB -->
                    <TextBlock Text="Sub-Departamento:"
                               Grid.Row="2" Grid.Column="0"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               FontSize="14"/>

                    <TextBox x:Name="TxtSubDepartamento"
                             Grid.Row="2" Grid.Column="1"
                             IsEnabled="False"
                             Opacity="0.5"/>

                    <!-- SEPARADOR -->
                    <Separator Grid.Row="3"
                               Grid.ColumnSpan="5"
                               Margin="0,10"/>

                </Grid>

                <!-- BOTÕES -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,30,0,0">

                    <Button Content="Salvar"
                            Click="BtnSalvar_Click"/>

                    
                </StackPanel>

            </StackPanel>

        </Border>

    </Grid>

</UserControl>