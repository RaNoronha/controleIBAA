<UserControl x:Class="ControleMaterialIBAA.View.Paginas.CadastrarSubDepartamento"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

    <UserControl.Resources>

        <!-- ESTILO CAMPOS -->
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8,3"/>
            <Setter Property="BorderBrush" Value="#B0C4C4"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- ESTILO CHECKBOX -->
        <Style TargetType="CheckBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
        </Style>

        <!-- ESTILO BOTÃO -->
        <Style TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#3E6F6F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

    </UserControl.Resources>

    <!-- FUNDO -->
    <Grid Background="#6F9C9C">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ================= CABEÇALHO ================= -->
        <StackPanel Grid.Row="0"
                    Margin="0,30,0,20"
                    HorizontalAlignment="Center">

            <TextBlock Text="CADASTRO DE SUBDEPARTAMENTO"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="Black"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="Igreja Batista Anchieta"
                       FontSize="14"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- ================= CONTEÚDO ================= -->
        <Border Grid.Row="1"
                Background="#6F9C9C"
                Padding="20">

            <StackPanel HorizontalAlignment="Center"
                        Width="900">

                <!-- FORMULÁRIO -->
                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="350"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>

                    <!-- LINHA 0 -->
                    <TextBlock Text="Departamento:" Grid.Column="0"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               FontSize="14" Grid.ColumnSpan="2" Margin="43,0,307,0"/>

                    <!-- SEPARADOR -->
                    <Separator Grid.Row="2"
                               Grid.ColumnSpan="5"
                               Margin="-18,25,18,25"/>
                    <ComboBox x:Name="CmbDepartamentos"
                              HorizontalAlignment="Left"
                              Height="40"
                              Margin="10,0,0,0"
                              VerticalAlignment="Center"
                              Width="287"
                              Grid.Column="1"
                              DisplayMemberPath="nome"
                              SelectedValuePath="id"/>
                    <TextBlock 
                        Grid.Column="0"
                        VerticalAlignment="Top"
                        FontWeight="Bold"
                        FontSize="14" 
                        Margin="43,25,26,0"
                        Grid.Row="1" Text="Subdepartamento:"/>

                    <TextBox x:Name="TxtSubDepartamento"
                             Grid.Column="1" 
                             HorizontalAlignment="Left" 
                             Height="35" Margin="10,15,0,0" 
                             Grid.Row="1" TextWrapping="Wrap" 
                             VerticalAlignment="Top" 
                             Width="287"/>

                </Grid>

                <!-- BOTÕES -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,-30,0,0">
                    <Button Content="Salvar"
                            Click="BtnSalvar_Click"/>


                </StackPanel>

            </StackPanel>

        </Border>

    </Grid>

</UserControl>